{% extends 'base.html.twig' %}

{% block title %}liste des marques{% endblock %}

{% block body %}
<a href="{{ path('brands_new') }}" class="btn btn-warning mt-3">Ajouter une marque</a>
   <div class="container">
    <h1>Liste des marques</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marques</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for brand in brands %}
            <tr>
                <td>{{ brand.id }}</td>
                <td>{{ brand.brand }}</td>
                <td>
                <div class="row">
                {{ include('brands/show.html.twig') }}
                <a class="btn btn-success mr-3" data-bs-toggle="modal" data-bs-target="#afficheModal">Afficher</a>
                    {# <a href="{{ path('brands_show', {'id': brand.id}) }}" class="btn btn-success mr-3" data-bs-toggle="modal" data-bs-target="#afficheModal">Afficher</a> #}
                    <a href="{{ path('brands_edit', {'id': brand.id}) }}" class="btn btn-primary mr-3">Modifier</a>
                     {{ include('brands/_delete_form.html.twig') }}
                </div>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de marques </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
