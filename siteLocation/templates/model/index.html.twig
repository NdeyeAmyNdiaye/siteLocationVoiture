{% extends 'base.html.twig' %}

{% block title %}liste des modéles{% endblock %}

{% block body %}
<a href="{{ path('model_new') }}" class="btn btn-warning mt-3">Ajouter une modéle</a>
   <div class="container">
    <h1>Liste des modéles</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Modéle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
         {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.model }}</td>
                <td>
                <div class="row">
                {{ include('model/show.html.twig') }}
                <a class="btn btn-success mr-3" data-bs-toggle="modal" data-bs-target="#afficheModal">Afficher</a>
                    {# <a href="{{ path('brands_show', {'id': brand.id}) }}" class="btn btn-success mr-3" data-bs-toggle="modal" data-bs-target="#afficheModal">Afficher</a> #}
                    <a href="{{ path('model_edit', {'id': model.id}) }}" class="btn btn-primary mr-3">Modifier</a>
                     {{ include('model/_delete_form.html.twig') }}
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas de modéles </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
